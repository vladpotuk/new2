<Window x:Class="RPS_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Камінь-Ножиці-Папір" Height="400" Width="600">
    <Grid>
        <Button Content="Підключитись" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="ConnectButton_Click"/>
        <Button Content="Відключитись" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="120,0,0,0" Width="100" Click="DisconnectButton_Click"/>
        <Button Content="Камінь" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,50,0,0" Width="75" Click="MoveButton_Click"/>
        <Button Content="Ножиці" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,50,0,0" Width="75" Click="MoveButton_Click"/>
        <Button Content="Папір" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,50,0,0" Width="75" Click="MoveButton_Click"/>
        <Button Content="Запропонувати нічию" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,50,0,0" Width="120" Click="OfferDrawButton_Click"/>
        <Button Content="Визнати поразку" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="370,50,0,0" Width="120" Click="ConcedeButton_Click"/>
        <TextBlock Name="ResultTextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,100,0,0" Width="580" Height="250" TextWrapping="Wrap"/>
    </Grid>
</Window>
